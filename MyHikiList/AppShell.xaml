<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyHikiList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyHikiList"
    Shell.FlyoutBehavior="Disabled"
    Title="MyHikiList">

    <Shell.Resources>
        <ResourceDictionary>
            <!--  Стиль для всіх Title -->
            <Style TargetType="Shell" ApplyToDerivedTypes="True">
                <Setter Property="BackgroundColor" Value="#0f0b0c" />
                <Setter Property="ForegroundColor" Value="#FFFFFF" />
                <Setter Property="TitleColor" Value="#FFFFFF" />
                <Setter Property="DisabledColor" Value="#B0B0B0" />
                <Setter Property="UnselectedColor" Value="#B0B0B0" />
                <Setter Property="TabBarBackgroundColor" Value="#0f0b0c" />
                <Setter Property="TabBarForegroundColor" Value="#FFFFFF" />
                <Setter Property="TabBarUnselectedColor" Value="#B0B0B0" />
                <Setter Property="TabBarTitleColor" Value="#FFFFFF" />
            </Style>
        </ResourceDictionary>
    </Shell.Resources>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
